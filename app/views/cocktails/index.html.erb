
<div class="container">
  <div class="row cols-sm-1 cols-md-2 cols-lg-5 cols-xl-6  d-flex justify-content-around">
  <% @cocktails.each do |cocktail| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
        <h1 class="card-title"><%= cocktail.name %></h1>
        <%= link_to cocktail.name, cocktail_path(cocktail), class: 'btn btn-info' %>
      </div>
    </div>
  <% end %>
  </div>
  <%= link_to "Create", new_cocktail_path %>
</div>
